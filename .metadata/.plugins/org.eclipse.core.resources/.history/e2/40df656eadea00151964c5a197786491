      var ev2 = document.getElementById("list-setWS_settings");
      ev2.addEventListener("click", function ()
      {
    	  tau.changePage("setURL.html");
      });

      var ev3 = document.getElementById("list-checkWS_settings");
      ev3.addEventListener("click", function ()
      {
		  	if(window.localStorage.getItem('url')){
				console.log(window.localStorage.getItem('url').toString());
				alert("\n\nWS URL: \n" + window.localStorage.getItem('url').toString());
			}
	  		else{
				alert("\nError!\nSet network IP");
