	var ws='';
	var ev = document.getElementById("btn-Connect");
	ev.addEventListener("click", function ()
	{
		ws =  window.localStorage.getItem('websocket')
		ws.send("Hello");
	});

	ws.onopen = function () {
		ws.send('Ping'); // Send the message 'Ping' to the server
	};
 
